<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ServletEnd</servlet-name>
        <servlet-class>kievreclama.task.servlets.ServletEnd</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Newtask</servlet-name>
        <servlet-class>kievreclama.task.servlets.NewTask</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateTask</servlet-name>
        <servlet-class>kievreclama.task.servlets.UpdateTask</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletFilterIndex</servlet-name>
        <servlet-class>kievreclama.task.servlets.ServletFilterIndex</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FilterClear</servlet-name>
        <servlet-class>kievreclama.task.servlets.FilterClear</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteTask</servlet-name>
        <servlet-class>kievreclama.task.servlets.DeleteTask</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletEnd</servlet-name>
        <url-pattern>/private/ServletEnd</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Newtask</servlet-name>
        <url-pattern>/private/NewTask</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateTask</servlet-name>
        <url-pattern>/private/UpdateTask</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletFilterIndex</servlet-name>
        <url-pattern>/ServletFilterIndex</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FilterClear</servlet-name>
        <url-pattern>/FilterClear</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteTask</servlet-name>
        <url-pattern>/private/DeleteTask</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <jsp-config>
        <jsp-property-group>
            <url-pattern>/private/*</url-pattern>
        </jsp-property-group>
    </jsp-config>
    <security-constraint>
        <display-name>AccessPrivate</display-name>
        <web-resource-collection>
            <web-resource-name>private</web-resource-name>
            <description/>
            <url-pattern>/private/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>private</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <form-login-config>
            <form-login-page>/private/login.jsp</form-login-page>
            <form-error-page>/private/error.jsp</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description/>
        <role-name>private</role-name>
    </security-role>
    <resource-ref>
        <res-ref-name>jdbc/postgres</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Application</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
